# ========== APP ==========
DEBUG=false
APP_NAME=NanoGen API

# ========== DATABASE ==========
# PostgreSQL connection string
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/nanogen

# ========== REDIS ==========
REDIS_URL=redis://localhost:6379/0

# ========== TELEGRAM ==========
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://api.yourapp.com/webhook

# Admin channel for payment/withdrawal approvals
# Create a private channel, add bot as admin, get channel ID
TELEGRAM_ADMIN_CHANNEL_ID=-1001234567890

# ========== AIML API ==========
AIML_API_KEY=your_aiml_api_key
AIML_API_BASE_URL=https://api.aimlapi.com/v2

# ========== WEB APP ==========
WEBAPP_URL=https://app.nanogen.ai

# ========== SECURITY ==========
SECRET_KEY=your_secret_key_here_change_in_production

# ========== PAYMENT CARD (UZCARD) ==========
PAYMENT_CARD_NUMBER=
PAYMENT_CARD_HOLDER=
PAYMENT_CARD_TYPE=UZCARD

# ========== PRICING ==========
# Markup multiplier (3x)
MARKUP_MULTIPLIER=3.0

# Credit packages (credits: price in UZS)
CREDIT_PACKAGE_100=50000
CREDIT_PACKAGE_500=225000
CREDIT_PACKAGE_1000=400000
CREDIT_PACKAGE_5000=1750000

# ========== REFERRAL PROGRAM ==========
REFERRAL_COMMISSION_PERCENT=25
MIN_WITHDRAWAL_UZS=300000

# ========== ADMIN ==========
# Telegram User ID for admin scripts (optional)
# TELEGRAM_ADMIN_ID=123456789

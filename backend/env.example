# =================================
# NanoGen Backend Environment
# =================================

# Application
DEBUG=false
APP_NAME=NanoGen API

# Database (Railway PostgreSQL)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/nanogen

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-backend.up.railway.app/webhook/telegram

# AIML API (for AI generation)
AIML_API_KEY=your_aiml_api_key_here
AIML_API_BASE_URL=https://api.aimlapi.com/v2

# Frontend Web App URL (Netlify)
WEBAPP_URL=https://your-frontend.netlify.app

# Security
SECRET_KEY=generate-a-strong-random-key-here-at-least-32-chars

# Pricing (in credits/diamonds)
PRICE_IMAGE_BASIC=2
PRICE_VIDEO_BASIC=7
PRICE_VIDEO_PRO=15

# Currency
DIAMOND_RATE_UZS=1000
